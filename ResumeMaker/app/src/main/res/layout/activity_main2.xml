<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFEFE"
    android:orientation="vertical"
    tools:context=".MainActivity2">
    
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Details and create CV"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtname"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Enter Your Full Name :"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:padding="20dp"
            android:background="@drawable/shape"
            android:layout_marginHorizontal="10dp"
            android:textColorHint="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Information"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/edtemail"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="10dp"
            android:hint="Enter Your E-mail Address :"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape"
            android:padding="20dp"
            android:textColorHint="@color/black"/>


        <EditText
            android:id="@+id/edtmobileno"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="10dp"
            android:hint="Enter Your Mobile no :"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape"
            android:padding="20dp"
            android:inputType="number"
            android:textColorHint="@color/black"/>

        <EditText
            android:id="@+id/edtaddress"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="10dp"
            android:hint="Enter Your Address :"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape"
            android:padding="20dp"
            android:textColorHint="@color/black"/>

        <EditText
            android:id="@+id/edtbirthdate"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="10dp"
            android:hint="Enter Your Birthdate :"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape"
            android:padding="20dp"
            android:textColorHint="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/edtdetails"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="10dp"
            android:hint="Enter Your Details :"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape"
            android:padding="20dp"
            android:textColorHint="@color/black"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Experience"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/edtexperience"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="10dp"
            android:hint="Enter Your Experience :"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape"
            android:padding="20dp"
            android:textColorHint="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skills"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/edtskills"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="10dp"
            android:hint="Enter Your Skills :"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape"
            android:padding="20dp"
            android:textColorHint="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Languages"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/edtlang"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="10dp"
            android:hint="Enter Your Languages :"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape"
            android:padding="20dp"
            android:textColorHint="@color/black"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Education"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/edteducation"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="10dp"
            android:hint="Enter Your Education :"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape"
            android:padding="20dp"
            android:textColorHint="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hobby"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

        <CheckBox
            android:id="@+id/cbsinging"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Singing"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textSize="19sp"/>
        <CheckBox
            android:id="@+id/cbreading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reading"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textSize="19sp"/>
        <CheckBox
            android:id="@+id/cbdansing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dancing"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textSize="19sp"/>
        <CheckBox
            android:id="@+id/cbart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Art"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textSize="19sp"/>
        <Button
            android:id="@+id/btn"
            android:background="@drawable/shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="90dp"
            android:layout_marginTop="20dp"
            android:text="Create Resume" />

    </LinearLayout>
</ScrollView>
</LinearLayout>